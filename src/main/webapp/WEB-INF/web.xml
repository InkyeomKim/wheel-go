<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Spring 설정 파일 위치 설정 -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <!-- context 폴더 내 context-*.xml로 시작하는 모든 설정 파일을 로드 -->
        <param-value>classpath:context/context-*.xml</param-value>
    </context-param>

    <!-- Spring의 ContextLoaderListener 등록 -->
    <!-- 애플리케이션 시작 시 Spring의 ApplicationContext를 로드하여 관리하는 리스너 -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!-- Spring MVC의 DispatcherServlet 설정 -->
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <!-- DispatcherServlet이 사용할 Spring 설정 파일 위치 -->
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/dispatcher-servlet.xml</param-value>
        </init-param>
        <!-- 서버 시작 시 DispatcherServlet을 초기화 (1은 가장 먼저 초기화됨) -->
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- DispatcherServlet의 URL 매핑 -->
    <!-- 모든 요청을 DispatcherServlet이 처리하도록 설정 -->
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- CharacterEncodingFilter 설정 -->
    <!-- 모든 요청에 대해 UTF-8 인코딩을 강제 설정하는 필터 -->
    <filter>
        <filter-name>characterEncoding</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <!-- CharacterEncodingFilter의 URL 매핑 -->
    <!-- .do로 끝나는 모든 요청에 대해 CharacterEncodingFilter를 적용 -->
    <filter-mapping>
        <filter-name>characterEncoding</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>

</web-app>
